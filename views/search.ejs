<h1 class="pb-4">Search Results</h1>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
  <% if(seller != '') { %>
    <% seller.forEach(function(seller, index){ %>
    <a href="/seller/<%= seller._id %>" class="col text-center category__link">
      <div class="category__img category__img--large shadow">
        <img src="/uploads/<%= seller.image %>" alt="<%= seller.name %>" loading="lazy">
      </div>
      <div class="pt-1"><%= seller.name %></div>
    </a>
    <% }) %>
  <% } else { %>
    <p>This category is empty at the moment.</p>
  <% } %>
</div>